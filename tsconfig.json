{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-native",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "noStrictGenericChecks": false,
    "strict": true,
  },
  "exclude": [
    "example",
    "android",
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
}
